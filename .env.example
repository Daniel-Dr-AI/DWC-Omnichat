# DWC-Omnichat Environment Variables
# Copy this file to .env and fill in your values

# ==================================
# SECURITY (REQUIRED)
# ==================================
# Generate with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
JWT_SECRET=your-secret-key-here-replace-me

# ==================================
# TWILIO (Optional - SMS/WhatsApp)
# ==================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_NUMBER=

# ==================================
# FACEBOOK MESSENGER (Optional)
# ==================================
FB_PAGE_ACCESS_TOKEN=
FB_VERIFY_TOKEN=

# ==================================
# APPLICATION CONFIGURATION
# ==================================
# Frontend origin for CORS (change for production)
FRONTEND_ORIGIN=http://localhost:5173

# Public URL for webhooks and callbacks
PUBLIC_BASE_URL=http://localhost:8000

# Auto-close conversations after N minutes of inactivity
AUTO_CLOSE_MINUTES=30

# Escalate conversations to admin after N seconds without response
ESCALATE_AFTER_SECONDS=300

# ==================================
# PRODUCTION OVERRIDES (Render.com)
# ==================================
# These are set automatically by Render via render.yaml
# FRONTEND_ORIGIN=https://dwc-omnichat.onrender.com
# PUBLIC_BASE_URL=https://dwc-omnichat.onrender.com
